[google]
changes.autoresolve = true

[defaults]
blame = -udcw

[diff]
git = true
nobinary = true
noprefix = true
showfunc = true
ignorews = true

[histedit]
dropmissing = true
singletransaction = true

[ui]
interface = curses
quiet = true
# strict = true
textwidth = 120

[rebase]
experimental.inmemory = true

[templatealias]
google_default_commit_description = 'BUG='

[google-change-tags]
default.markdown=true

[color]
diff.diffline = white
diff.file_a = blue
diff.file_b = blue
diff.hunk = yellow
diff.extended = green
diff.trailingwhitespace = red_background

diff.deleted = red
diff.deleted.changed = red
diff.deleted.unchanged = red

diff.inserted = green
diff.inserted.changed = green
diff.inserted.unchanged = green
