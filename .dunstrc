[global]
    font = "terminus 8"
    allow_markup = yes
    format = "<b>%s %p</b>\n%b"
    sort = yes
    indicate_hidden = true
    idle_threshold = 0
    geometry = "300x5-20+20"
    alignment = left
    show_age_threshold = 60
    sticky_history = yes
    follow = keyboard
    word_wrap = yes
    separator_height = 2
    padding = 5
    horizontal_padding = 5
    separator_color = frame
    startup_notification = false
    dmenu = "/usr/bin/dmenu -p dunst: -nb #222222 -nf #bbbbbb -sb #005577 -sf #eeeeee"
    browser = /etc/alternatives/www-browser

[frame]
    width = 1
    color = "#000000"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#007700"
    foreground = "#bbbbbb"
    timeout = 3

[urgency_normal]
    background = "#005577"
    foreground = "#bbbbbb"
    timeout = 3

[urgency_critical]
    background = "#dd6600"
    foreground = "#bbbbbb"
    timeout = 0

[irc]
    appname = weechat
    timeout = 3
    background = "#008800"
    foreground = "#bbbbbb"
