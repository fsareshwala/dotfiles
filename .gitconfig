[user]
  name = Faraaz Sareshwala
  email = faraazs@gmail.com

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = /home/fsareshwala/prefix/etc/git/exclude
  pager = less
  autocrlf = input
  preloadindex = true
  editor = vim

[color]
  diff = auto
  branch = auto
  status = auto
  interactive = auto
  ui = true
  pager = true

[alias]
  ls = ls-files
  ff = pull --ff-only --stat
  fx = "!f() { git commit --fixup \":/$1\"; }; f"
  clist = "!f() { git log --pretty='- [%h] %s (%an <%ae>)' $1..$2; }; f"
  fcheckout = "!f() { git checkout -b fsareshwala/$1; }; f"

[reviewboard]
  url = http://reviewboard.twitter.biz

[diff]
  tool = vimdiff
  algorithm = patience
  renames = true

[difftool]
  prompt = false

[merge]
  tool = vimdiff
  ff = only

[tig]
  line-graphics = yes
  tab-size = 4
  commit-order = default
  show-changes = no

[help]
  autocorrect = 1

[rerere]
  enabled = 1

[grep]
  lineNumber = true

[push]
  default = upstream

[http]
  postBuffer = 524288000

[rebase]
  autoSquash = true

[init]
  templatedir = ~/prefix/etc/git/template.gittemplate
